{
  "name": "picnic",
  "version": "1.0.0",
  "description": "",
  "main": "src/server/server.js",
  "scripts": {
    "start": "npm run dev",
    "prod": "npm run prod:client && npm run prod:server",
    "dev": "npm run dev:prepare && concurrently --kill-others 'npm run dev:client' 'npm run dev:test' 'npm run dev:server'",
    "cleartext": "cleartext=true npm run dev",
    "dev:server": "nodemon src/server/server.js",
    "dev:test": "jest --watch -u",
    "dev:client": "rollup src/client/index.js --name picnic --file build/index.js --format iife  --watch ",
    "dev:prepare": "husky install",
    "prod:server": "node src/server/server.js",
    "prod:client": "rollup src/client/index.js --name picnic --file build/index.js --format iife  ",
    "ci:server": "node src/server/server.js",
    "ci:unit-test": "jest",
    "ci:headless": "npx playwright test e2e/",
    "ci:headfull": "npx playwright test --headed e2e/"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "rollup": "^2.63.0",
    "ws": "^8.4.0"
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "jest": "^27.4.7",
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@playwright/test": "^1.17.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "husky": "^7.0.0",
    "nodemon": "^2.0.15",
    "pretty-quick": "^3.1.3"
  }
}
